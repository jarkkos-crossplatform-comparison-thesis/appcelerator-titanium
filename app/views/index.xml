<Alloy>
	<NavigationWindow id="navigation" platform="ios">
	<Window class="container">
		<View layout="vertical">
			<View layout="horizontal" class="row header">
				<ImageView image="/images/appicon.png" width="25%" height="Ti.UI.SIZE" />
				<View layout="vertical" class="size" width="50%">
					<Label>Titanium</Label>
					<Label>Version 2</Label>
					<Label>Select test</Label>
				</View>
				<ImageView image="/images/appicon.png" width="25%" height="Ti.UI.SIZE" horizontalAlign="right" />
			</View>

			<View layout="vertical" class="row">
				<Button class="widebutton" id="openButtonLatencyBtn">Button latency</Button>
				<Button class="widebutton" id="openLocalListView">Local listview</Button>
				<Button class="widebutton" id="openNetworkListView">Network listview</Button>
				<Button class="widebutton" id="openHeavyComputationBtn">Heavy computation</Button>
				<Button class="widebutton" id="openVibrationLatencyBtn">Vibration latency</Button>
				<Button class="widebutton" id="openThirdPartyNoticesBtn">Third party notices</Button>
			</View>
		</View>
	</Window>
	</NavigationWindow>
	
	<Window class="container" platform="android">
		<View layout="vertical">
			<View layout="horizontal" class="row header">
				<ImageView image="/images/appicon.png" width="25%" height="Ti.UI.SIZE" />
				<View layout="vertical" class="size" width="50%">
					<Label>Titanium</Label>
					<Label>Version whatever</Label>
					<Label>Select test</Label>
				</View>
				<ImageView image="/images/appicon.png" width="25%" height="Ti.UI.SIZE" horizontalAlign="right" />
			</View>

			<View layout="vertical" class="row">
				<Button class="widebutton" id="openButtonLatencyBtn">Button latency</Button>
				<Button class="widebutton" id="openLocalListView">Local listview</Button>
				<Button class="widebutton" id="openNetworkListView">Network listview</Button>
				<Button class="widebutton" id="openHeavyComputationBtn">Heavy computation</Button>
				<Button class="widebutton" id="openVibrationLatencyBtn">Vibration latency</Button>
				<Button class="widebutton" id="openThirdPartyNoticesBtn">Third party notices</Button>
			</View>
		</View>
	</Window>
</Alloy>