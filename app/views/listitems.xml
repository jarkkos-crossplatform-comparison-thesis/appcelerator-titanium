<Alloy>
	<Window class="container">
		<View layout="vertical" class="row">
			<ListView id="itemlist" defaultItemTemplate="itemTemplate">
				<Templates>
					<ItemTemplate name="itemTemplate">
						<View layout="horizontal" height="80" width="100%" left="5" right="5" top="2.5" bottom="2.5">
							<ImageView bindId="image" id="itemImage" width="80" height="80" />
							<Label bindId="description" id="descriptionLabel" left="5" width="70%" />
						</View>
					</ItemTemplate>
				</Templates>
				<ListSection name="items" />
			</ListView>
			<ActivityIndicator id="activityIndicator"></ActivityIndicator>
		</View>
	</Window>
</Alloy>